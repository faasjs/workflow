{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignore": ["dist/*", "tmp/*", ".cache/*", ".temp/*", "coverage/*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "noBannedTypes": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noEmptyInterface": "warn",
        "noControlCharactersInRegex": "off",
        "noAssignInExpressions": "off",
        "noArrayIndexKey": "off",
        "noConfusingVoidType": "warn"
      },
      "style": {
        "noParameterAssign": "off",
        "useLiteralEnumMembers": "off",
        "noNonNullAssertion": "warn",
        "useTemplate": "warn"
      },
      "performance": {
        "noDelete": "off"
      },
      "a11y": {
        "useAltText": "warn",
        "useKeyWithClickEvents": "off",
        "useValidAnchor": "off",
        "noBlankTarget": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "jsxQuoteStyle": "single"
    }
  }
}
